<h1>Skate Park</h1>

<div class="py-4">
    <h2>Registro</h2>
    <hr class="w-50" />

    <form id="formRegister" encType="multipart/form-data">
        <div class="form-group row w-50 m-auto">
            <div class="form-group col-12 col-sm-6">
                <label>Email</label>
                <input id="email" type="email" class="form-control m-auto" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Nombre</label>
                <input id="nombre" type="text" class="form-control m-auto" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Password</label>
                <input id="password" type="password" class="form-control m-auto" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Repita la password</label>
                <input id="passwordValidate" type="password" class="form-control m-auto" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Años de experiencia</label>
                <input id="anos_experiencia" type="number" class="form-control m-auto" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Especialidad</label>
                <input id="especialidad" type="text" class="form-control m-auto" />
            </div>
            <div class="form-group col-12 col-sm-12">
                <label>Foto de perfil</label>
                <input name="foto" type="file" />
            </div>
        </div>
        <button id="btn-buscar" class="btn btn-primary mt-2" onclick="()">Registrarme</button>
        <p><a href="#"> Iniciar sesión</a></p>
    </form>
</div>
<script src="/assets/js/register.js"></script>